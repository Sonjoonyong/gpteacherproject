    <!-- 댓글 조회 -->
    <select id="replyList" parameterType="int" resultType="CommunityReply">
        select
            communityReplyContent
        from Community_reply
        where id = #{communityPostId}
--         where 댓글번호 표시일지 아님 다른거 넣어도 되는지
    </select>

    <!-- 댓글 작성 -->
    <insert id="save" parameterType="com.sooaz.gpt.domain.community.communityreply.CommunityReply">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            select COMMUNITY_REPLY_ID_SEQ.nextval from dual
        </selectKey>
        insert into Community_reply
        (
            id,
            user_id,
            community_post_id,
            community_reply_content,
            community_reply_writedate,
            community_reply_parents_id
        )
        values
        (
            #{id},
            #{userId},
            #{communityPostId},
            #{communityReplyContent},
            SYSDATE,
            #{id}
        )
    </insert>

    <!-- 댓글 수정 -->
    <update id="replyedit" parameterType="com.sooaz.gpt.domain.community.communityreply.CommunityReply">
        update Community_reply set
            communityReplyContent=#{communityReplyContent}

    </update>

    <!-- 댓글 삭제 -->
    <delete id="replyDelete" parameterType="com.sooaz.gpt.domain.community.communityreply.CommunityReply">
        delete from Community_reply
            where id = #{community_reply_id}
    </delete>
