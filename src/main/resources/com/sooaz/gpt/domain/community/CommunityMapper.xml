<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sooaz.gpt.domain.community.communityMapper">
   <insert id="save">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            select COMMUNITY_ID_SEQ.nextval from dual
        </selectKey>
        insert into COMMUNITY(
            id,
            user_id,
            community_post_category,
            community_post_title,
            community_post_content,
            community_post_hit,
            community_post_writedate,
            community_post_like
            )
            values(
            #{id},
            #{user_id},
            #{communityPostCategory},
            #{communityPostTitle},
            #{communityPostContent},
            #{communityPostHit},
            #{communityPostWritedate},
            #{communityPostLike}
       )
   </insert>

    <select id="findById" parameterType="long" resultType="Community">
        select * from COMMUNITY where id = #{communityId}
    </select>

    <select id="findAll" resultType="Community">
        select * from COMMUNITY
    </select>
    <update id="update">
        update COMMUNITY
        <set>
            <if test="communityPostLike != null">
                community_post_like = #{communitypostlike}
            </if>
        </set>
        where id = #{communityId}
    </update>
    <delete id="delete" parameterType="long">
        delete from COMMUNITY where id = #{communityId}
    </delete>




</mapper>